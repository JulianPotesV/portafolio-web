---
export interface Props {
	title: string;
	href: string;
	link: string;
	label: string;
	alt?: string;
	description?: string;
	slug?: string;
}
const { title, href, label, link, alt = '', description = '', slug } = Astro.props;
---

<a
	href={`/proyectos/${slug}`}
	class="rounded-[10px] bg-[#0e0e0e] px-4 pt-4 pb-4 hover:scale-[1.04] duration-300 ease-in-out hover: border-[#525252] hover:border"
>
	<img src={href} alt={alt} />

	<h3 class="mt-4 font-semibold text-lg text-white">
		{title}
	</h3>
	<p class="text-white text-sm mt-2">
		{description ? description : 'Descripci√≥n del proyecto no disponible.'}
	</p>

	<div class="mt-4 flex flex-wrap gap-1">
		<span
			class="rounded-full bg-[#1E1E1E] px-2.5 py-0.5 text-xs whitespace-nowrap text-[#FF0000]"
		>
			{label}
		</span>
	</div>
</a>

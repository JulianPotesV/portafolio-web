---
const currentPath = Astro.url.pathname;
---

<div
	class="flex justify-center items-center fixed top-0 left-0 w-full z-50 px-4"
>
	<div
		class="bg-[#1E1E1E]/60 flex items-center rounded-full mt-4 sm:mt-6 lg:mt-8 backdrop-blur max-w-full overflow-x-auto"
	>
		<a href="/"
			><img
				src="/icono-julian-potes.svg"
				alt="icono julian potes"
				class="mx-2 my-2 transition-transform duration-300 hover:scale-105 w-10 h-10 sm:w-10 sm:h-10 lg:w-auto lg:h-auto flex-shrink-0"
			/></a
		>
		<div class="text-white ml-2 sm:ml-3 lg:ml-5 flex items-center">
			<a
				href="/proyectos"
				class={`${
					currentPath === '/proyectos'
						? 'bg-[var(--rojo-principal)] text-white rounded-full'
						: ''
				} hover:bg-[#3B3B3B] hover:text-white hover:rounded-full ease-in-out duration-300 px-2 sm:px-3 lg:px-4 py-1.5 sm:py-2 text-sm sm:text-base whitespace-nowrap`}
			>
				Proyectos
			</a>

			<a
				href="/sobre-mi"
				class={`${
					currentPath === '/sobre-mi'
						? 'bg-[var(--rojo-principal)] text-white rounded-full'
						: ''
				} hover:bg-[#3B3B3B] hover:text-white hover:rounded-full ease-in-out duration-300 ml-2 sm:ml-3 lg:ml-5 px-2 sm:px-3 lg:px-4 py-1.5 sm:py-2 text-sm sm:text-base whitespace-nowrap`}
			>
				Sobre m√≠
			</a>

			<a
				href="/contacto"
				class={`${
					currentPath === '/contacto'
						? 'bg-[var(--rojo-principal)] text-white rounded-full'
						: ''
				} hover:bg-[#3B3B3B] hover:text-white hover:rounded-full ease-in-out duration-300 ml-2 sm:ml-3 lg:ml-5 mr-4 sm:mr-6 lg:mr-10 px-2 sm:px-3 lg:px-4 py-1.5 sm:py-2 text-sm sm:text-base whitespace-nowrap`}
			>
				Contacto
			</a>
		</div>
	</div>
</div>

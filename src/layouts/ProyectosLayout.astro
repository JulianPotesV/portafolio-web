---
const { proyecto } = Astro.props;
const { Content } = await proyecto.render();
const {
	titulo,
	descripcion,
	imagen,
	fecha,
	cliente,
	rol,
	duracion,
	herramientas,
	imagenGaleria1, 
	imagenGaleria2, 
	imagenGaleria3, 
	imagenGaleria4,
	behance,
} = proyecto.data;

import Gallery from '../components/Galeria-imagenes.astro';
const imagenes = [
	{
		src: imagenGaleria1,
		width: 1200,
		height: 674,
		alt: titulo,
	},
	{
		src: imagenGaleria2,
		width: 1200,
		height: 674,
		alt: titulo,
	},

	{
		src: imagenGaleria3,
		width: 1200,
		height: 674,
		alt: titulo,
	},
	{
		src: imagenGaleria4,
		width: 1200,
		height: 674,
		alt: titulo,
	},

];
---

<section class="px-6">
	<h1 class="text-[var(--rojo-principal)] text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold text-center mt-8 md:mt-24">
		{titulo}
	</h1>
	<div class="max-w-[50rem] mx-auto mt-8 text-center">
		<p class="text-white text-lg">
			{descripcion}
		</p>
	</div>
	<div class="flex items-center justify-center mt-12 md:mt-24">
		<img src={imagen} alt={titulo} />
	</div>
</section>

<section class="mt-16 md:mt-32 px-6">
	<div class="flex flex-col md:flex-row max-w-[88rem] mx-auto space-y-8 md:space-y-0 md:space-x-24">

		<div id="descripcion-proyecto">
			<Content />
		</div>

		<div>
			<div
				class="border border-[var(--rojo-principal)] text p-8 min-w-96 rounded-lg"
			>
				<h4 class="text-[var(--rojo-principal)] text-2xl">
					Detalles del proyecto
				</h4>

				<p class="text-white text-lg mt-4">Fecha</p>
				<p class="text-[#666666]">{fecha}</p>
				<hr class="border-[#666666] my-4" />

				<p class="text-white">Cliente</p>
				<p class="text-[#666666]">{cliente}</p>
				<hr class="border-[#666666] my-4" />

				<p class="text-white">Rol</p>
				<p class="text-[#666666]">{rol}</p>
				<hr class="border-[#666666] my-4" />

				<p class="text-white">Duración</p>
				<p class="text-[#666666]">{duracion}</p>
				<hr class="border-[#666666] my-4" />

				<p class="text-white">Herramientas</p>
				<p class="text-[#666666]">{herramientas}</p>
			</div>
		</div>
	</div>
</section>

<section class="max-w-[88rem] mx-auto mt-16 px-6">
	<h2 class="text-[var(--rojo-principal)] text-2xl lg:text-4xl font-semibold mb-8">
		Galería
	</h2>
	<div>
		<Gallery images={imagenes} />
	</div>
</section>

<section>
	<section>
        <div class="flex flex-col sm:flex-row justify-center mt-16 sm:mt-28 gap-4 px-4">
            <a href="/proyectos"
                class="flex bg-black border border-red-500 hover:bg-gray-800 transition-all duration-200 ease-in-out items-center justify-center rounded-full gap-2 sm:gap-4 py-3 px-6 sm:px-8 lg:px-19 text-lg sm:text-xl lg:text-2xl w-full sm:w-auto"
            >
                <img src="/icons/flecha-izquierda.svg" alt="flecha izquierda" />
                <span class="text-white text-center sm:text-left"> 
                    <span class="hidden sm:inline">Volver a Proyectos</span>
                    <span class="sm:hidden">Volver</span>
                </span>
            </a>

            <a href="#" target="_blank"
                class="flex bg-blue-600 hover:bg-blue-800 transition-all duration-200 ease-in-out items-center justify-center rounded-full gap-2 sm:gap-4 py-3 px-6 sm:px-8 lg:px-10 text-lg sm:text-xl lg:text-2xl w-full sm:w-auto"
            >
                <span class="text-white text-center sm:text-left">
                    <span class="hidden sm:inline">Ver más de este proyecto</span>
                    <span class="sm:hidden">Ver proyecto</span>
                </span>
                <img src="/icons/behance.svg" alt="behance" />
            </a>
        </div>
    </section>
</section>